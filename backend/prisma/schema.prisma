generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String      @id @default(cuid())
  name            String
  email           String      @unique
  role            Role        @default(EMPLOYEE)
  approved        Boolean     @default(false)
  isDeleted       Boolean     @default(false)
  departmentId    String?
  createdAt       DateTime    @default(now())
  password        String?
  assignedByTasks Task[]      @relation("assignedByTasks")
  assignedTasks   Task[]      @relation("assignedTasks")
  assignedTaskAssignments Task[] @relation("TaskAssignees")
  taskLogs        TaskLog[]
  department      Department? @relation(fields: [departmentId], references: [id])
}

model Priority {
  id       Int     @id @default(autoincrement())
  code     String  @unique
  name     String
  color    String
  order    Int
  isActive Boolean @default(true)
  tasks    Task[]
}

model Task {
  id           String     @id @default(cuid())
  readableId   Int        @default(autoincrement()) // Removed @unique for now to avoid migration issues with existing data, will allow duplicate 0s temporarily if needed, but ideally db push handles it. actually @unique is fine with db push reset.
  title        String
  description  String
  deadline     DateTime
  status       TaskStatus @default(PENDING)
  createdAt    DateTime   @default(now())
  assignedById String
  assignedToId String
  priorityId   Int?
  assignedBy   User       @relation("assignedByTasks", fields: [assignedById], references: [id])
  assignedTo   User       @relation("assignedTasks", fields: [assignedToId], references: [id])
  assignees    User[]     @relation("TaskAssignees")
  priority     Priority?  @relation(fields: [priorityId], references: [id])
  logs         TaskLog[]
}

model TaskLog {
  id          String   @id @default(cuid())
  description String
  createdAt   DateTime @default(now())
  taskId      String
  userId      String?
  task        Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user        User?    @relation(fields: [userId], references: [id])
}

model Department {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  users     User[]
}

enum Role {
  ADMIN
  MANAGER
  EMPLOYEE
}

enum TaskStatus {
  PENDING
  ACTIVE
  DELAYED
  COMPLETED
}
